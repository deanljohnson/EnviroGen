<Window x:Class="EnviroGenDisplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="EnviroGen Display" Height="Auto" Width="Auto" SizeToContent="WidthAndHeight"
        xmlns:c="clr-namespace:EnviroGenDisplay"
        xmlns:converters="clr-namespace:EnviroGenDisplay.Converters"
        xmlns:continents="clr-namespace:EnviroGen.Continents;assembly=EnviroGen"
        xmlns:erosion="clr-namespace:EnviroGen.Erosion;assembly=EnviroGen">
    <Grid>
        <Grid.Resources>
            <c:EnvironmentData x:Key="EnvironmentData"/>
            <converters:IntToStringConverter x:Key="IntToStringConverter"/>
            <converters:FloatToStringConverter x:Key="FloatToStringConverter"/>
            <converters:SFMLColorToSystemColorConverter x:Key="ColorConverter"/>
        </Grid.Resources>
        <TabControl>
            <TabItem Header="Height Map">
                <Grid Margin="10,10,10,10" Height="Auto" VerticalAlignment="Top" Name="Grid">
                    <Grid.DataContext>
                        <Binding Source="{StaticResource EnvironmentData}"/>
                    </Grid.DataContext>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Content="Size X:" Grid.Column="0" Grid.Row="0"/>
                    <Label Content="Size Y:" Grid.Column="0" Grid.Row="1"/>
                    <Label Content="Height Map Octave Count:" Grid.Column="0" Grid.Row="2"/>
                    <Label Content="Cloud Map Octave Count:" Grid.Column="0" Grid.Row="3"/>
                    <Label Content="Height Map Seed:" Grid.Column="0" Grid.Row="4"/>
                    <Label Content="Cloud Map Seed:" Grid.Column="0" Grid.Row="5"/>
                    <Label Content="Noise Roughness:" Grid.Column="0" Grid.Row="6"/>
                    <Label Content="Noise Frequency:" Grid.Column="0" Grid.Row="7"/>
                    <Button Content="Generate" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Grid.Column="0" Grid.Row="8" Click="OnGenerateClick"/>
                    <CheckBox Content="Combine w/ Current" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="9" Name="CombineCheckBox"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="0" Text="{Binding Path=GenOptions.SizeX, Converter={StaticResource IntToStringConverter}}"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="1" Text="{Binding Path=GenOptions.SizeY, Converter={StaticResource IntToStringConverter}}"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="2" Text="{Binding Path=GenOptions.HeightMapOctaveCount, Converter={StaticResource IntToStringConverter}}"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="3" Text="{Binding Path=GenOptions.CloudMapOctaveCount, Converter={StaticResource IntToStringConverter}}"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="4" Text="{Binding Path=GenOptions.HeightMapSeed, Converter={StaticResource IntToStringConverter}}"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="5" Text="{Binding Path=GenOptions.CloudMapSeed, Converter={StaticResource IntToStringConverter}}"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="6" Text="{Binding Path=GenOptions.NoiseRoughness, Converter={StaticResource FloatToStringConverter}}"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="7" Text="{Binding Path=GenOptions.NoiseFrequency, Converter={StaticResource FloatToStringConverter}}"/> 
                </Grid>
            </TabItem>
            <TabItem Header="Continents">
                <Grid Margin="10,10,10,10" Height="Auto" VerticalAlignment="Top" Name="ContinentsGrid">
                    <Grid.Resources>
                        <continents:ContinentGenerationData x:Key="ContinentData"/>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                
                    <Label Content="Number of Continents:" Grid.Column="0" Grid.Row="0"/>
                    <Label Content="Minimum Continent Size:" Grid.Column="0" Grid.Row="1"/>
                    <Label Content="Maximum Continent Size:" Grid.Column="0" Grid.Row="2"/>
                    <Label Content="Continent Scale:" Grid.Column="0" Grid.Row="3"/>
                    <Button Content="Build Continents" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Grid.Column="0" Grid.Row="4" Click="OnBuildContinentsClick"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="0" DataContext="{Binding Source={StaticResource ContinentData}}" Text="{Binding Path=NumContinents, Converter={StaticResource IntToStringConverter}}"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="1" DataContext="{Binding Source={StaticResource ContinentData}}" Text="{Binding Path=MinimumContinentSize, Converter={StaticResource IntToStringConverter}}"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="2" DataContext="{Binding Source={StaticResource ContinentData}}" Text="{Binding Path=MaximumContinentSize, Converter={StaticResource IntToStringConverter}}"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="3" DataContext="{Binding Source={StaticResource ContinentData}}" Text="{Binding Path=Scale, Converter={StaticResource FloatToStringConverter}}"/>
                </Grid>
            </TabItem>
            <TabItem Header="Erosion">
                <TabControl>
                    <TabItem Header="Improved Thermal">
                        <Grid Margin="10,10,10,10" Height="Auto" VerticalAlignment="Top" Name="ImprovedThermalErosionGrid">
                            <Grid.Resources>
                                <erosion:ThermalErosionData x:Key="ThermalErosionData"/>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Talus Angle:" Grid.Column="0" Grid.Row="0"/>
                            <Label Content="Iterations:" Grid.Column="0" Grid.Row="1"/>
                            <Button Content="Erode Map" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Grid.Column="0" Grid.Row="2" Click="OnImprovedThermalErodeClick"/>
                            <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="0" DataContext="{Binding Source={StaticResource ThermalErosionData}}" Text="{Binding Path=TalusAngle, Converter={StaticResource FloatToStringConverter}}"/>
                            <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="1" DataContext="{Binding Source={StaticResource ThermalErosionData}}" Text="{Binding Path=Iterations, Converter={StaticResource IntToStringConverter}}"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Thermal">
                        <Grid Margin="10,10,10,10" Height="Auto" VerticalAlignment="Top" Name="ThermalErosionGrid">
                            <Grid.Resources>
                                <erosion:ThermalErosionData x:Key="ThermalErosionData"/>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Talus Angle:" Grid.Column="0" Grid.Row="0"/>
                            <Label Content="Iterations:" Grid.Column="0" Grid.Row="1"/>
                            <Button Content="Erode Map" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Grid.Column="0" Grid.Row="2" Click="OnThermalErodeClick"/>
                            <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="0" DataContext="{Binding Source={StaticResource ThermalErosionData}}" Text="{Binding Path=TalusAngle, Converter={StaticResource FloatToStringConverter}}"/>
                            <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="1" DataContext="{Binding Source={StaticResource ThermalErosionData}}" Text="{Binding Path=Iterations, Converter={StaticResource IntToStringConverter}}"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Hydraulic">
                        <Grid Margin="10,10,10,10" Height="Auto" VerticalAlignment="Top" Name="HydraulicErosionGrid">
                            <Grid.Resources>
                                <erosion:HydraulicErosionData x:Key="HydraulicErosionData"/>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Rain Amount:" Grid.Column="0" Grid.Row="0"/>
                            <Label Content="Solubility:" Grid.Column="0" Grid.Row="1"/>
                            <Label Content="Evaporation:" Grid.Column="0" Grid.Row="2"/>
                            <Label Content="Capacity:" Grid.Column="0" Grid.Row="3"/>
                            <Label Content="Iterations:" Grid.Column="0" Grid.Row="4"/>
                            <Button Content="Erode Map" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Grid.Column="0" Grid.Row="5" Click="OnHydraulicErodeClick"/>
                            <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="0" DataContext="{Binding Source={StaticResource HydraulicErosionData}}" Text="{Binding Path=RainAmount, Converter={StaticResource FloatToStringConverter}}"/>
                            <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="1" DataContext="{Binding Source={StaticResource HydraulicErosionData}}" Text="{Binding Path=Solubility, Converter={StaticResource FloatToStringConverter}}"/>
                            <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="2" DataContext="{Binding Source={StaticResource HydraulicErosionData}}" Text="{Binding Path=Evaporation, Converter={StaticResource FloatToStringConverter}}"/>
                            <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="3" DataContext="{Binding Source={StaticResource HydraulicErosionData}}" Text="{Binding Path=Capacity, Converter={StaticResource FloatToStringConverter}}"/>
                            <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="4" DataContext="{Binding Source={StaticResource HydraulicErosionData}}" Text="{Binding Path=Iterations, Converter={StaticResource IntToStringConverter}}"/>
                        </Grid>
                    </TabItem>
                </TabControl>
            </TabItem>
            <TabItem Header="Coloring">
                <Grid Margin="10,10,10,10" Height="Auto" VerticalAlignment="Top" Name="ColoringGrid">
                    <Grid.DataContext>
                        <Binding Source="{StaticResource EnvironmentData}"/>
                    </Grid.DataContext>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Content="Sea Level:" Grid.Column="0" Grid.Row="1"/>
                    <Label Content="Sand Distance:" Grid.Column="0" Grid.Row="2"/>
                    <Label Content="Forest Distance:" Grid.Column="0" Grid.Row="3"/>
                    <Label Content="Mountain Distance:" Grid.Column="0" Grid.Row="4"/>
                    <Button Content="Set Coloring" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Grid.Column="0" Grid.Row="5" Click="OnSetColoringClick"/>
                    <Label Content="Low" FontWeight="Bold" Grid.Column="1" Grid.Row="0"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="1" Text="{Binding Path=GenOptions.SeaLevel, Converter={StaticResource FloatToStringConverter}}"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="2" Text="{Binding Path=GenOptions.SandDistance, Converter={StaticResource FloatToStringConverter}}"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="3" Text="{Binding Path=GenOptions.ForestDistance, Converter={StaticResource FloatToStringConverter}}"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="1" Grid.Row="4" Text="{Binding Path=GenOptions.MountainDistance, Converter={StaticResource FloatToStringConverter}}"/>
                    <Label Content="High" FontWeight="Bold" Grid.Column="2" Grid.Row="0"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="2" Grid.Row="1" Text="{Binding Path=GenOptions.SeaLevel, Converter={StaticResource FloatToStringConverter}}"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="2" Grid.Row="2" Text="{Binding Path=GenOptions.SandDistance, Converter={StaticResource FloatToStringConverter}}"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="2" Grid.Row="3" Text="{Binding Path=GenOptions.ForestDistance, Converter={StaticResource FloatToStringConverter}}"/>
                    <TextBox HorizontalAlignment="Left" Height="Auto" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" Grid.Column="2" Grid.Row="4" Text="{Binding Path=GenOptions.MountainDistance, Converter={StaticResource FloatToStringConverter}}"/>

                    <Label Content="Sea Color:" Grid.Column="3" Grid.Row="1"/>
                    <Label Content="Sand Color:" Grid.Column="3" Grid.Row="2"/>
                    <Label Content="Forest Color:" Grid.Column="3" Grid.Row="3"/>
                    <Label Content="Mountain Color:" Grid.Column="3" Grid.Row="4"/>
                    <Label Content="Low" FontWeight="Bold" Grid.Column="4" Grid.Row="0" HorizontalAlignment="Center"/>
                    <xctk:ColorPicker ColorMode="ColorPalette" Grid.Column="4" Grid.Row="1" SelectedColor="{Binding Path=SeaColorLow, Converter={StaticResource ColorConverter}}"/>
                    <xctk:ColorPicker ColorMode="ColorPalette" Grid.Column="4" Grid.Row="2" SelectedColor="{Binding Path=SandColorLow, Converter={StaticResource ColorConverter}}"/>
                    <xctk:ColorPicker ColorMode="ColorPalette" Grid.Column="4" Grid.Row="3" SelectedColor="{Binding Path=ForestColorLow, Converter={StaticResource ColorConverter}}"/>
                    <xctk:ColorPicker ColorMode="ColorPalette" Grid.Column="4" Grid.Row="4" SelectedColor="{Binding Path=MountainColorLow, Converter={StaticResource ColorConverter}}"/>
                    <Label Content="High" FontWeight="Bold" Grid.Column="5" Grid.Row="0" HorizontalAlignment="Center"/>
                    <xctk:ColorPicker ColorMode="ColorPalette" Grid.Column="5" Grid.Row="1" SelectedColor="{Binding Path=SeaColorHigh, Converter={StaticResource ColorConverter}}"/>
                    <xctk:ColorPicker ColorMode="ColorPalette" Grid.Column="5" Grid.Row="2" SelectedColor="{Binding Path=SandColorHigh, Converter={StaticResource ColorConverter}}"/>
                    <xctk:ColorPicker ColorMode="ColorPalette" Grid.Column="5" Grid.Row="3" SelectedColor="{Binding Path=ForestColorHigh, Converter={StaticResource ColorConverter}}"/>
                    <xctk:ColorPicker ColorMode="ColorPalette" Grid.Column="5" Grid.Row="4" SelectedColor="{Binding Path=MountainColorHigh, Converter={StaticResource ColorConverter}}"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
