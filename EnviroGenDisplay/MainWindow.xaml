<Window x:Class="EnviroGenDisplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EnviroGen Display" Height="846" Width="1308" SizeToContent="WidthAndHeight"
        xmlns:views="clr-namespace:EnviroGenDisplay.Views"
        xmlns:viewModels="clr-namespace:EnviroGenDisplay.ViewModels"
        xmlns:modifiers="clr-namespace:EnviroGenDisplay.ViewModels.Modifiers">
    <Window.Resources>
        <DataTemplate DataType="{x:Type modifiers:RidgedModifierViewModel}">
            <views:RidgedModifierView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type modifiers:InvertModifierViewModel}">
            <views:InvertModifierView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type modifiers:ScaleModifierViewModel}">
            <views:ScaleModifierView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type modifiers:ExponentModifierViewModel}">
            <views:ExponentModifierView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type modifiers:NormalizeModifierViewModel}">
            <views:NormalizeModifierView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type modifiers:ClampModifierViewModel}">
            <views:ClampModifierView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type modifiers:AddModifierViewModel}">
            <views:AddModifierView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:HydraulicErosionViewModel}">
            <views:HydraulicErosionView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:ThermalErosionViewModel}">
            <views:ThermalErosionView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:ImprovedThermalErosionViewModel}">
            <views:ImprovedThermalErosionView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:ColorizerViewModel}">
            <views:ColorizerView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:EnvironmentDataViewModel}">
            <views:EnvironmentDataView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:EnvironmentViewModel}">
            <views:HeightMapView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:SquareContinentViewModel}">
            <views:SquareContinentView/>
        </DataTemplate>
    </Window.Resources>
    <Grid HorizontalAlignment="Left" Width="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TabControl HorizontalAlignment="Left" Width="280" Height="Auto" Margin="0,0,0,10">
            <TabItem Header="Height Map" Name="HeightMapTab">
            </TabItem>
            <TabItem Header="Continents">
                <TabControl>
                    <TabItem Header="Square" Name="SquareContinentTab">
                    </TabItem>
                </TabControl>
            </TabItem>
            <TabItem Header="Erosion">
                <TabControl>
                    <TabItem Header="Improved Thermal" Name="ImprovedThermalErosionTab">
                    </TabItem>
                    <TabItem Header="Thermal" Name="ThermalErosionTab">
                    </TabItem>
                    <TabItem Header="Hydraulic" Name="HydraulicErosionTab">
                    </TabItem>
                </TabControl>
            </TabItem>
            <TabItem Header="Coloring" Name="ColoringTab">
            </TabItem>
        </TabControl>
        <ContentControl Name="HeightMapView" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Window>
